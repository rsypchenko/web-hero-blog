---
import { readAll } from "../lib/markdoc/read";
import { blog } from "../lib/markdoc/frontmatter.schema";
import Card from "./Card.astro";

const posts = await readAll({
  directory: "blog",
  frontmatterSchema: blog,
});

const sortedPosts = posts
  .filter((p) => p.frontmatter.draft !== true)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.date).valueOf() -
      new Date(a.frontmatter.date).valueOf()
  )
  .slice(0, 6);
---

<section class="mb-8 max-w-4xl mx-auto">
  <div class="flex text-center justify-center pb-4">
    <h2
      class="text-3xl text-center bg-left-bottom bg-[length:100%_35%] bg-no-repeat bg-gradient-to-r from-primary-yellow to-primary-yellow dark:from-primary-blue dark:to-primary-blue" 
    >
      Latest Posts
    </h2>
  </div>

  <div
    class="grid justify-items-center sm:grid-cols-2 gap-4 sm:justify-between"
  >
    {
      sortedPosts.map((post) => {
        return <Card post={post} />;
      })
    }
  </div>
</section>
