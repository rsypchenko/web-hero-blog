---
import { MarkdocRenderer } from "astro-markdoc-renderer";
import type { Content } from "astro-markdoc-renderer";
import YouTubeEmbed from "./YouTubeEmbed.astro";
import TweetEmbed from "./TweetEmbed.astro";
import CodePenEmbed from "./CodePenEmbed.astro";
import GitHubGistEmbed from "./GitHubGistEmbed.astro";
import CodeBlock from "./CodeBlock.astro";
import Heading from "./Heading.astro";
import SandBoxEmbed from "./SandBoxEmbed.astro";
import ReadMore from "./ReadMore.astro";

type Props = {
  content: Content;
  tags: any;
  slug: string;
};

const { content, tags, slug } = Astro.props;

const components = {
  Heading: {
    Component: Heading,
    props: {},
  },
  CodeBlock: {
    Component: CodeBlock,
    props: {},
  },
  YouTubeEmbed: {
    Component: YouTubeEmbed,
    props: {},
  },
  TweetEmbed: {
    Component: TweetEmbed,
    props: {},
  },
  CodePenEmbed: {
    Component: CodePenEmbed,
    props: {},
  },
  GitHubGistEmbed: {
    Component: GitHubGistEmbed,
    props: {},
  },
  SandBoxEmbed: {
    Component: SandBoxEmbed,
    props: {},
  },
};
---

<div>
  <MarkdocRenderer content={content} components={components} />
  <ReadMore tags={tags} slug={slug} />
</div>
